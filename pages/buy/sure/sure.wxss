/* pages/buy/sure/sure.wxss */

.wrap {
  width: 690rpx;
  /* background-color: red; */
  margin: 0 auto;
}

.addres_box {
  height: 150rpx;
  background-color: #fff;
  border-radius: 20rpx;
  margin: 20rpx 0;
  padding-left: 20rpx;
  position: relative;
}

.addres {
  font-size: 30rpx;
  color: #2e2e2e;
}

.app {
  color: #5f5f5f;
  font-size: 26rpx;
}

.goods_wrap {
  background-color: #fff;
  border-radius: 20rpx;
}

.goods_id {
  width: 640rpx;
  margin: 0 auto;
}

.clearfix:after {
  display: block;
  visibility: hidden;
  clear: both;
  height: 0;
  content: ".";
}

.goods_img {
  float: left;
  width: 150rpx;
  height: 150rpx;
  border-radius: 20rpx;
}

.goods_des {
  float: right;
}

.goods_detail {
  display: flex;
  flex-direction: column;
  padding-left: 20rpx;
}

.submit {
  position: absolute;
  width: 750rpx;
  height: 96rpx;
  bottom: 0;
}

.submit_des {
  position: absolute;
  left: 0;
  bottom: 0;
}
.goods_detail>view{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  flex-wrap: nowrap;
}
.sure-order{
  position: absolute;
  bottom: 0;
  right: 0;
  font-size: 14px;
  width: 100px;
  border-radius: 15px;
}
.modify-address{
  width: 40px;
  height: 30px;
  border-radius: 10px;
  font-size: 10px;
  line-height: 20px;
  text-align: center;
  background-color: blanchedalmond;
}
